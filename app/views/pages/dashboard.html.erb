
<div class="container">
  <div class="card">
    <div class="card-header d-flex">
      <h5><%= @user.first_name %> <%= @user.last_name %></h5>
      <%= image_tag 'avatar_default.jpg', alt: "Default avatar for #{@user.first_name} #{@user.last_name}", class: "avatar" unless @user.avatar.attached?%>
      <%= cl_image_tag @user.photo.key, alt: "Avatar #{@user.first_name} #{@user.last_name}", class: "avatar" if @user.avatar.attached?%>
    </div>
    <div>
      <p><%= @user.description %></p>
      <%= link_to "Edit my profile", edit_user_registration_path(@user) %>
    </div>
  </div>
  <div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="booking-tab" data-bs-toggle="tab" data-bs-target="#booking-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">My Bookings</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="lesson-tab" data-bs-toggle="tab" data-bs-target="#lesson-tab-pane" type="button" role="tab" aria-controls="lesson-tab-pane" aria-selected="false">My Lessons</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="booking-tab-pane" role="tabpanel" aria-labelledby="booking-tab" tabindex="0"><%= render 'mybookings', teacher_bookings: @teacher_bookings, student_bookings: @student_bookings %></div>
      <div class="tab-pane fade" id="lesson-tab-pane" role="tabpanel" aria-labelledby="lesson-tab" tabindex="0"><%= render 'mylessons', lesson: @mylesson %></div>
    </div>
  </div>
</div>
