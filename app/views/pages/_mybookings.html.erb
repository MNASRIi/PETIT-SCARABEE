<div class= "container p-3">
  <h1 class="mb-3 text-align-center">My Bookings</h1>
  <div class= "card">
    <h2 class="card-header">Teacher: Lessons requests</h2>
    <div class="card-body p-3">
      <% unless @teachers_booking.nil? %>
        <% @teacher_bookings.each do |booking| %>
                    <article class="postcard">
              <%= image_tag 'lesson-default.avif', alt: "Default image for #{booking.lesson.title}", class: "postcard__img" unless booking.lesson.photo.attached?%>
              <%= cl_image_tag lesson.photo.key, alt: "Image for #{booking.lesson.title}", class: "postcard__img" if booking.lesson.photo.attached?%>
            <div class="d-flex justify-content-between">
              <div class="postcard__text">
                <span class="d-flex align-item-center">
                  <h2 class="postcard__title my-auto"><%= booking.lesson.title %> by <strong><%= booking.lesson.user.first_name %> <%= booking.lesson.user.last_name %></strong></h2>
                  <%= image_tag 'avatar_default.jpg', alt: "Default avatar for #{booking.lesson.user.first_name} #{booking.lesson.user.last_name}", class: "rounded-circle shadow ms-3 my-auto object-fit-cover", style:"width: 50px; height: 50px;" unless booking.lesson.user.avatar.attached?%>
                  <%= cl_image_tag booking.lesson.user.photo.key, alt: "Avatar #{booking.lesson.user.first_name} #{booking.lesson.user.last_name}", class: "rounded-circle shadow ms-3 my-auto object-fit-cover", style:"width: 50px; height: 50px;" if booking.lesson.user.avatar.attached?%>
                </span>
                <div class="postcard__subtitle small">
                  <h4><%= booking.lesson.category %></h4>
                </div>
                <div class="postcard__bar"></div>
                <div class="postcard__preview-txt"><%= booking.lesson.description %></div>
                  <div class="d-flex justify-content-between">
                    <ul class="postcard__tagbox">
                      <li class="tag__item"><i class="fas fa-tag mr-2"></i> <%= booking.lesson.price %> €/h</li>
                      <li class="tag__item"><i class="fas fa-clock mr-2"></i> <%= booking.lesson.duration %> h</li>
                      <li class="tag__item play blue">
                        <i class="fas fa-play mr-2"></i> Total price: <%= booking.lesson.duration * booking.lesson.price %> €
                      </li>
                    </ul>
                  </div>
                  <div class="d-flex justify-content-between">
                      <ul class="postcard__tagbox">
                        <li class="tag__item"><i class="fa-solid fa-circle-exclamation"></i> <%= booking.status %></li>
                        <li class="tag__item text-bg-success"><i class="fa-solid fa-ban"></i><%= link_to "Accept this booking", accept_booking_path(booking), data: { turbo_method: :patch } %></li>
                        <li class="tag__item text-bg-danger"><i class="fa-solid fa-ban"></i><%= link_to "Decline this booking", decline_booking_path(booking), data: { turbo_method: :patch } %></li>
                      </ul>
                  </div>
                </div>
              </div>
            </div>
            <%= booking.status %>
            <%= link_to "Cancel this booking",cancel_booking_path(booking), data: { turbo_method: :patch } %>
          </article>
          <% end %>
      <% else %>
        <h5 class="mt-3 p-2">No pending lessons requests</h5>
      <% end %>
    </div>
  </div>

  <div class="card">
    <h2 class="card-header">Students: My lessons</h2>
    <div class="card-body p-3">
      <% unless @student_bookings.empty? %>
        <% @student_bookings.each do |booking| %>
          <article class="postcard">
              <%= image_tag 'lesson-default.avif', alt: "Default image for #{booking.lesson.title}", class: "postcard__img" unless booking.lesson.photo.attached?%>
              <%= cl_image_tag lesson.photo.key, alt: "Image for #{booking.lesson.title}", class: "postcard__img" if booking.lesson.photo.attached?%>
            <div class="d-flex justify-content-between">
              <div class="postcard__text">
                <span class="d-flex align-item-center">
                  <h2 class="postcard__title my-auto"><%= booking.lesson.title %> by <strong><%= booking.lesson.user.first_name %> <%= booking.lesson.user.last_name %></strong></h2>
                  <%= image_tag 'avatar_default.jpg', alt: "Default avatar for #{booking.lesson.user.first_name} #{booking.lesson.user.last_name}", class: "rounded-circle shadow ms-3 my-auto object-fit-cover", style:"width: 50px; height: 50px;" unless booking.lesson.user.avatar.attached?%>
                  <%= cl_image_tag booking.lesson.user.photo.key, alt: "Avatar #{booking.lesson.user.first_name} #{booking.lesson.user.last_name}", class: "rounded-circle shadow ms-3 my-auto object-fit-cover", style:"width: 50px; height: 50px;" if booking.lesson.user.avatar.attached?%>
                </span>
                <div class="postcard__subtitle small">
                  <h4><%= booking.lesson.category %></h4>
                </div>
                <div class="postcard__bar"></div>
                <div class="postcard__preview-txt"><%= booking.lesson.description %></div>
                  <div class="d-flex justify-content-between">
                    <ul class="postcard__tagbox">
                      <li class="tag__item"><i class="fas fa-tag mr-2"></i> <%= booking.lesson.price %> €/h</li>
                      <li class="tag__item"><i class="fas fa-clock mr-2"></i> <%= booking.lesson.duration %> h</li>
                      <li class="tag__item play blue">
                        <i class="fas fa-play mr-2"></i> Total price: <%= booking.lesson.duration * booking.lesson.price %> €
                      </li>
                    </ul>
                  </div>
                  <div class="d-flex justify-content-between">
                      <ul class="postcard__tagbox">
                        <li class="tag__item"><i class="fa-solid fa-circle-exclamation"></i> <%= booking.status %></li>
                        <li class="tag__item text-bg-danger"><i class="fa-solid fa-ban"></i> <%= link_to "Cancel this booking",cancel_booking_path(booking), data: { turbo_method: :patch } %></li>
                      </ul>
                  </div>
                </div>
              </div>
            </div>
            <%= booking.status %>
            <%= link_to "Cancel this booking",cancel_booking_path(booking), data: { turbo_method: :patch } %>
          </article>
          <% end %>
      <% else %>
        <h5 class="mt-3 p-2">No lesson requested</h5>
      <% end %>
    </div>
  </div>
</div>
