<div>
  <h1>My Bookings</h1>
  <div>
    <h2>Teacher: Lessons requests</h2>
    <% @teacher_bookings.each do |booking| %>
      <div>
        <%= image_tag 'lesson-default.avif', alt: "Default image for #{lesson.title}" unless lesson.photo.attached?%>
        <%= cl_image_tag lesson.photo.key, alt: "Image for #{lesson.title}" if lesson.photo.attached?%>
        <% link_to lesson_path(lesson) do  %>
          <h3><%= lesson.title %></h3>
        <% end %>
        <p><%= lesson.description %></p>
        <%= link_to "Edit", edit_lesson_path(lesson)  %>
        <%= link_to "Delete", lesson_path(lesson), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
  <div>
    <h2>Students: My lessons</h2>
  </div>
</div>
